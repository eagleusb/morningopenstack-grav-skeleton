<nav class="pagination" role="navigation">
    {% if pagination.hasNext %}
        <a class="older-posts" href="{{ base_url }}{{ pagination.params }}{{ pagination.nextUrl }}"><i class="fa fa-angle-double-left"></i> Précédent</a>
    {% endif %}
    <span class="page-number">Page {{ uri.currentPage }} sur {{ pagination|length }}</span>
    {% if pagination.hasPrev %}
        <a class="newer-posts" href="{{ base_url }}{{ pagination.params }}{{ pagination.prevUrl }}">Suivant <i class="fa fa-angle-double-right"></i></a>
    {% endif %}
</nav>
